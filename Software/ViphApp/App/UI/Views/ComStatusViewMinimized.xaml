<UserControl x:Class="ViphApp.App.UI.Views.ComStatusViewMinimized"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="800">

  <StackPanel Background="DarkGray" 
    Height="30" 
    Orientation="Horizontal">
    <Button
      Width="30" 
      Content="/\" 
      Command="{Binding Status.DoShowStatusDetails}" />
    <Label Foreground="White" FontWeight="Bold" Content="Port:"/>
    <ComboBox Width="100" FontWeight="Bold"
              ItemsSource="{Binding Path=Status.SerialPorts, Mode=OneWay}"    
              SelectedItem="{Binding Path=Status.SSerialPorts, Mode=TwoWay}" />
    <Button Content="Refresh" Command="{Binding Status.DoRefreshSerialPorts}" Foreground="White" FontWeight="Bold"/>
    <CheckBox Content="Connect" Foreground="White" FontWeight="Bold"
              Style="{StaticResource {x:Type ToggleButton}}"
              IsChecked="{Binding Path=Status.IsConnected, Mode=TwoWay}"  />
  </StackPanel>
</UserControl>
